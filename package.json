  "devDependencies": {
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/simple-read-later.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/simple-read-later/issues"
  },
  "homepage": "https://github.com/your-username/simple-read-later#readme",
