{
  "manifest_version": 3,
  "name": "Simple Read-Later",
  "version": "1.0",
  "description": "A simple extension to save web pages and read them later with multilingual support",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Add to Read Later",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}